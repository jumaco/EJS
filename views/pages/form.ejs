<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>

    <body>
        <%- include('../partials/header'); %>

            <div class="container mt-1">
                <div class="jumbotron">
                    <h1 class="display-4">Ingrese Nuevo Producto</h1>

                    <form class="my-4" action="/productos" method="POST">
                        <div class="form-group">
                            <label for="nombre">Nombre del Producto</label>
                            <input id="nombre" class="form-control" type="text" name="title" required>
                        </div>
                        <div class="form-group">
                            <label for="precio">Precio</label>
                            <input id="precio" class="form-control" type="number" step="0.01" name="price" required>
                        </div>
                        <div class="form-group">
                            <label for="foto">URL Imagen del producto</label>
                            <input id="foto" class="form-control" type="url" name="thumbnail">
                        </div>
                        <button class="btn btn-success mt-3">Crear</button>
                    </form>

                    <a href="/list-productos" type="button" class="btn btn-primary">Ver productos</a>
                </div>
            </div>

            <%- include('../partials/footer'); %>
    </body>

</html>